= form_for @sala do |f|
  - if @sala.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sala.errors.count, "error")} prohibited this sala from being saved:"
      %ul
        - @sala.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :co_sala
    = f.number_field :co_sala
  .field
    = f.label :co_local
    = f.number_field :co_local
  .field
    = f.label :no_sala
    = f.number_field :no_sala
  .field
    = f.label :capacidad
    = f.number_field :capacidad
  .field
    = f.label :descripcion
    = f.text_area :descripcion
  .actions
    = f.submit 'Save'
