= form_for @evento do |f|
  - if @evento.errors.any?
    #error_explanation
      %h2= "#{pluralize(@evento.errors.count, "error")} prohibited this evento from being saved:"
      %ul
        - @evento.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :co_evento
    = f.number_field :co_evento
  .field
    = f.label :co_local
    = f.number_field :co_local
  .field
    = f.label :f_evento
    = f.date_select :f_evento
  .field
    = f.label :capacidad
    = f.number_field :capacidad
  .field
    = f.label :descripcion
    = f.text_area :descripcion
  .actions
    = f.submit 'Save'
