= form_for @local do |f|
  - if @local.errors.any?
    #error_explanation
      %h2= "#{pluralize(@local.errors.count, "error")} prohibited this local from being saved:"
      %ul
        - @local.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :co_local
    = f.number_field :co_local
  .field
    = f.label :no_local
    = f.number_field :no_local
  .field
    = f.label :direccion
    = f.text_area :direccion
  .field
    = f.label :telefono
    = f.text_field :telefono
  .field
    = f.label :correo
    = f.text_field :correo
  .actions
    = f.submit 'Save'
